<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.brandonhxrr.gallery.RecentFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_recent">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.brandonhxrr.gallery.AlbumsFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_albums">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_ViewAlbumFragment"
            app:destination="@id/ViewAlbumFragment" />
    </fragment>

    <fragment
        android:id="@+id/ViewAlbumFragment"
        android:name="com.brandonhxrr.gallery.ViewAlbum"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_view_album">

        <action
            android:id="@+id/action_ViewAlbum_to_Second_Fragment"
            app:destination="@id/SecondFragment" />
        <argument
            android:name="albumPath"
            app:argType="string" />
    </fragment>
</navigation>